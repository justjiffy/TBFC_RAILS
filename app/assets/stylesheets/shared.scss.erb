@import "bootstrap";
html {
  background-image: url(<%= asset_path 'shared/bg.jpg' %>);
}
header {
  padding: 5px 0;
}
body {
  height: 100vh;
  max-width: 1200px;
  margin: 0 auto;
  display: block;
  position: static;
  overflow: scroll;
}
* {
  border-radius: 0 !important;
}
.margin-0 {
  margin-bottom: 0;
}
.padding-0 {
  padding-right: 0 !important;
  padding-left: 0 !important;
}
.expand-button {
  width: 100%;
  background: black;
  text-align: center;
  color: white;
  font-weight: bold;
}
.navbar-collapse {
  .button_to {
    width: 100%!important;
    margin-bottom: 3px;
    border-radius: 0;
  }
}

.btn {
  border: 0px !important;
  border-radius: 0px;
  white-space: pre-wrap;
}
.container-fluid > div {
  background: white;
}
.btn-outline-dark:hover,
.btn-outline-dark:active,
.btn-outline-dark:focus,
.btn-outline-dark.active, .show > .btn-outline-dark.dropdown-toggle {
  background: white;
  color: black;
  font-weight: bold;
  border-bottom: 5px solid #e8872a !important;
  cursor: pointer;
  outline: 0px !important;
  box-shadow: 0 0 0 0 !important;
}
.card {
  width: 100%;
  margin: 0 15px;
}
.card-image {
  max-width: 300px;
  float: left;
}
.card-header {
  h3 {
    margin-bottom: 0;
  }
}
.card-footer {
  p {
    margin-bottom: 0;
  }
}
.navbar-collapse {
  padding-top: 10px;
  form:focus {
    outline: 0px !important;
  }
}
.navbar {
  padding: 0.5rem 0;
}
.navbar-toggler {
  border-radius: 0;
}

.carousel-inner {
  h1 {
    padding: 0.5rem;
    text-shadow: 0px 0px 10px white;
  }
}

.carousel-caption {
  bottom: 0;
  padding-bottom: 0;

  h3, h6 {
    text-shadow: 0px 0px 10px black;
  }
}

hr {
  height: 12px;
  border: none;
  width: 80%;
  margin: 10px auto !important;
  display: block;
  background-position: center;
  background-image: url(<%= asset_path 'shared/hr.svg' %>);
}

@include media-breakpoint-up(sm) {
  header {
    padding: 15px 0 0 0;
  }
}

@include media-breakpoint-up(md) {
  .nav-fix {
    padding-right: 0;
  }
  hr {
    margin: 0px auto !important;
  }
  .page-content {
    > * {
    margin: 20px;
    }
  }
  .btn {
    text-align: left;
  }
  .header {
    border-bottom: 15px solid black;
    padding-bottom: 20px;

    img {
      position: absolute;
      bottom: 0
    }
  }
}

@include media-breakpoint-up(lg) {
  header {
    margin-bottom: -15px;

    .nav-fix {
      padding: 0.5rem 0;
      padding-right: 0px;
    }

    img {
      transform: scale(0.9);
      text-align: left;
    }
  }
}
